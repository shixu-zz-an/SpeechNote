.file-upload-page {
  min-height: 100vh;
  background-color: #fff;
}

/* 顶部导航 */
.nav-bar {
  padding: 32rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f0f0f0;
}

.back-button {
  padding: 16rpx;
  margin-right: 32rpx;
}

.back-button .iconfont {
  font-size: 40rpx;
  color: #333;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

.nav-right {
  width: 80rpx;
}

/* 上传区域 */
.upload-container {
  padding: 48rpx 32rpx;
}

.upload-area {
  background-color: #f5f5f5;
  border-radius: 24rpx;
  padding: 64rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.upload-area:active {
  opacity: 0.8;
}

.upload-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #e6f4ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.upload-icon .iconfont {
  font-size: 64rpx;
  color: #1677ff;
}

.upload-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.selected-file {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  word-break: break-all;
  margin-bottom: 32rpx;
}

/* 文件来源按钮 */
.file-source-buttons {
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-top: 16rpx;
}

.source-button {
  width: 48%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #e6f4ff;
  color: #1677ff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: 1rpx solid #1677ff;
  margin: 0;
  padding: 0;
}

.source-button:active {
  opacity: 0.8;
}

/* 文件格式说明 */
.format-info {
  background-color: #fafafa;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
}

.format-section {
  margin-bottom: 24rpx;
}

.format-section:last-child {
  margin-bottom: 0;
}

.format-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.format-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 上传进度 */
.upload-progress {
  margin-bottom: 48rpx;
}

.progress-bar {
  height: 8rpx;
  background-color: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-inner {
  height: 100%;
  background-color: #1677ff;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
  text-align: right;
  display: block;
}

/* 上传按钮 */
.upload-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1677ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.upload-button.disabled {
  background-color: #ccc;
  color: #fff;
}

.upload-button:not(.disabled):active {
  opacity: 0.8;
}
