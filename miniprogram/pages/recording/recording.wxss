.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #F5F7FA;
}

/* 顶部状态栏样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFF;
  position: sticky;
  top: 0;
  z-index: 100;
}

.recording-status {
  display: flex;
  align-items: center;
}

.recording-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #FF4D4F;
  margin-right: 10rpx;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.language-selector {
  font-size: 28rpx;
  color: #333;
}

/* 录音信息样式 */
.recording-info {
  flex: 1;
  margin: 0 20rpx;
}

.recording-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  text-align: center;
}

/* 转录内容区域样式 */
.transcription-area {
  flex: 1;
  padding: 20rpx 30rpx;
  overflow-y: auto;
}

.transcript-item {
  margin-bottom: 30rpx;
  background: #FFF;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.transcript-item.interim {
  opacity: 0.8;
}

.transcript-time {
  font-size: 28rpx;
  color: #3E7BFA;
  margin-bottom: 8rpx;
}

.transcript-text {
  font-size: 34rpx;
  color: #333;
  line-height: 1.5;
  word-wrap: break-word;
}

.empty-transcript {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 录音提示样式 */
.recording-tip {
  padding: 20rpx;
  text-align: center;
  background-color: #FFF7E6;
}

.recording-tip text {
  font-size: 24rpx;
  color: #FA8C16;
}

/* 波形动画样式 */
.waveform-container {
  padding: 30rpx;
  background-color: #FFF;
  margin: 20rpx 0;
}

.waveform-time {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  display: block;
  margin-bottom: 20rpx;
}

.waveform {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.waveform-bar {
  width: 4rpx;
  background: #3E7BFA;
  border-radius: 2rpx;
  transition: height 0.1s ease;
}

/* 录音进度样式 */
.time-progress {
  padding: 20rpx 30rpx;
  background-color: #FFF;
}

.progress-bar {
  height: 6rpx;
  background-color: #E1E4E8;
  border-radius: 3rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
}

.progress-line {
  height: 100%;
  background-color: #3E7BFA;
  transition: width 0.3s ease;
}

.time-display {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 底部控制栏样式 */
.footer {
  padding: 30rpx;
  background-color: #FFF;
  border-top: 1rpx solid #EEE;
}

.controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.cancel {
  color: #666;
}

.complete {
  color: #3E7BFA;
}

.record-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #3E7BFA;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(62, 123, 250, 0.3);
  transition: all 0.3s ease;
}

.record-btn.recording {
  background: #FF4D4F;
  transform: scale(0.95);
}

.record-icon {
  width: 40rpx;
  height: 40rpx;
  background: #fff;
  border-radius: 8rpx;
  position: relative;
}

.record-icon.play {
  width: 0;
  height: 0;
  background: transparent;
  border-style: solid;
  border-width: 20rpx 0 20rpx 30rpx;
  border-color: transparent transparent transparent #FFFFFF;
  margin-left: 10rpx;
}

.record-icon.pause {
  background: transparent;
}

.record-icon.pause:before,
.record-icon.pause:after {
  content: "";
  position: absolute;
  width: 14rpx;
  height: 40rpx;
  background-color: #FFFFFF;
  border-radius: 4rpx;
}

.record-icon.pause:before {
  left: 8rpx;
}

.record-icon.pause:after {
  right: 8rpx;
}
