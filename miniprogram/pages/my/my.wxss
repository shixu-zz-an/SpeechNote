/* 用户信息区域 */
.user-info {
  padding: 30rpx 20rpx;
  background: #ffffff;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
  border: 2rpx solid #eee;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.uid {
  font-size: 26rpx;
  color: #999;
}

.settings {
  padding: 10rpx;
}

.settings image {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.7;
}

/* VIP卡片 */
.vip-card {
  background: linear-gradient(135deg, #4a4a4a 0%, #2c2c2c 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  color: #fff;
  margin: 0 20rpx;
  position: relative;
  overflow: hidden;
}

.vip-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.vip-title {
  font-size: 32rpx;
  font-weight: bold;
}

.vip-time {
  font-size: 24rpx;
  opacity: 0.8;
}

.vip-stats {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: left;
  flex: 1;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
  color: #fff;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.upgrade-btn, .recharge-btn {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 30rpx;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 功能列表 */
.function-list {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 20rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.function-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 400;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
} 