.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 160rpx;
}

/* 顶部导航栏 */
.nav-bar {
  background-color: #fff;
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

.nav-actions {
  display: flex;
  align-items: center;
}

.action-button {
  padding: 16rpx;
  margin-left: 16rpx;
}

.action-button .iconfont {
  font-size: 40rpx;
  color: #333;
}

/* 日历部分 */
.calendar-section {
  background-color: #fff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

/* 日程列表 */
.schedule-list {
  background-color: #fff;
  padding: 32rpx;
}

.date-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.date-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.schedule-count {
  font-size: 28rpx;
  color: #999;
}

/* 日程项 */
.schedule-item {
  display: flex;
  padding: 32rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.schedule-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.time-column {
  width: 120rpx;
  margin-right: 24rpx;
}

.time-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.duration-text {
  font-size: 24rpx;
  color: #999;
}

.content-column {
  flex: 1;
  margin-right: 24rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  align-items: center;
}

.participant-info,
.location-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-right: 24rpx;
}

.participant-info .iconfont,
.location-info .iconfont {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.status-column {
  display: flex;
  align-items: flex-start;
}

.status-tag {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.status-tag.upcoming {
  background-color: #e6f4ff;
  color: #1677ff;
}

.status-tag.completed {
  background-color: #f5f5f5;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 48rpx;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 48rpx;
}

.add-button {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1677ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.add-button:active {
  opacity: 0.9;
}

/* 录音按钮 */
.record-button {
  position: fixed;
  bottom: 160rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 240rpx;
  height: 88rpx;
  background-color: #1677ff;
  color: white;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.3);
  z-index: 90;
}

.record-button:active {
  transform: translateX(-50%) translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(22, 119, 255, 0.4);
}

.record-button-icon {
  margin-right: 12rpx;
  font-size: 36rpx;
}
