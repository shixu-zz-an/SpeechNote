<!-- pages/login/login.wxml -->
<view class="container {{!isWechatPlatform ? 'non-wechat-container' : ''}}">
  <view class="logo-container">
    <image class="logo" src="/assets/images/logo.png" mode="aspectFit"></image>
    <view class="app-name">语音笔记</view>
  </view>

  <view class="login-container">
    <view class="welcome-text">欢迎使用语音笔记</view>
    
    <!-- 根据平台显示不同的提示文字 -->
    <view class="sub-text" wx:if="{{isWechatPlatform}}">请授权微信登录以使用完整功能</view>
    <view class="sub-text" wx:else>请输入手机号或直接登录使用</view>

    <!-- 登录按钮区域 -->
    <view class="auth-area">
      <!-- 非微信平台手机号输入框 -->
      <block wx:if="{{!isWechatPlatform && showPhoneInput}}">
        <view class="phone-input-area">
          <view class="input-label">手机号</view>
          <view class="input-container {{phoneNumberValid ? 'valid' : ''}}">
            <text class="country-code">+86</text>
            <input 
              class="phone-input" 
              type="number" 
              maxlength="11" 
              placeholder="请输入手机号码" 
              bindinput="phoneNumberInput"
              value="{{phoneNumber}}"
            />
            <view class="valid-icon" wx:if="{{phoneNumberValid}}">√</view>
          </view>
        </view>
      </block>
      
      <!-- 主要授权登录按钮 - 根据平台显示不同文字 -->
      <button 
        class="login-btn primary-btn {{!isWechatPlatform && phoneNumberValid ? 'phone-valid-btn' : ''}}" 
        bindtap="authorizeAndLogin"
        disabled="{{isLoggingIn}}"
      >
        <block wx:if="{{isWechatPlatform}}">
          <image class="btn-icon" src="/assets/images/wechat.png" mode="aspectFit"></image>
          <text>微信一键登录</text>
        </block>
        <block wx:else>
          <text>{{phoneNumberValid ? '手机号登录' : '登录'}}</text>
        </block>
      </button>
      
      <!-- 手机号授权按钮（隐藏在页面中，但可以通过JS调用） -->
      <button 
        class="hidden-btn" 
        open-type="getPhoneNumber" 
        bindgetphonenumber="getPhoneNumber"
      ></button>
      
      <!-- 跳过授权按钮 - 根据平台显示不同文字 -->
      <view class="skip-btn" bindtap="skipAuthLogin" wx:if="{{!isLoggingIn}}">
        <text wx:if="{{isWechatPlatform}}">跳过授权，直接登录</text>
        <text wx:else>{{showPhoneInput ? '跳过手机号验证，直接登录' : '直接登录'}}</text>
      </view>
      
      <!-- 登录中提示 -->
      <view class="login-status" wx:if="{{isLoggingIn}}">
        <view class="loading-icon"></view>
        <text>正在登录中...</text>
      </view>
    </view>
  </view>

  <view class="footer">
    <view class="copyright"> 2025 语音笔记</view>
  </view>
</view>

<!-- 样式 -->
<wxss>
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.non-wechat-container {
  background-color: #ffffff;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 24rpx;
  color: #333;
}

.login-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-text {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.sub-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
  text-align: center;
}

.auth-area {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.phone-input-area {
  width: 80%;
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-container {
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  border-radius: 44rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 1px solid #e0e0e0;
  transition: all 0.3s ease;
}

.input-container.valid {
  border-color: #07c160;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.2);
}

.country-code {
  font-size: 30rpx;
  color: #333;
  margin-right: 12rpx;
  font-weight: 500;
}

.phone-input {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  border: none;
  background: transparent;
}

.valid-icon {
  color: #07c160;
  font-size: 32rpx;
  font-weight: bold;
}

.login-btn {
  width: 80%;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  position: relative;
  border: none;
  transition: all 0.3s ease;
}

.primary-btn {
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 16rpx rgba(7, 193, 96, 0.3);
}

.phone-valid-btn {
  background-color: #1989fa;
  box-shadow: 0 8rpx 16rpx rgba(25, 137, 250, 0.3);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.hidden-btn {
  position: absolute;
  opacity: 0;
  width: 1rpx;
  height: 1rpx;
  overflow: hidden;
}

.skip-btn {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
}

.login-status {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.loading-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.footer {
  width: 100%;
  text-align: center;
  margin-bottom: 40rpx;
}

.copyright {
  font-size: 24rpx;
  color: #999;
}
</wxss>
