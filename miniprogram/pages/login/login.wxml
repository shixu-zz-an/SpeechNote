<!-- pages/login/login.wxml -->
<view class="container">
  <view class="logo-container">
    <image class="logo" src="/assets/images/logo.png" mode="aspectFit"></image>
    <view class="app-name">语音笔记</view>
  </view>

  <view class="login-container">
    <view class="welcome-text">欢迎使用语音笔记</view>
    <view class="sub-text">请授权微信登录以使用完整功能</view>

    <!-- 新版获取用户信息按钮 -->
    <button 
      wx:if="{{canIUseGetUserProfile}}" 
      class="login-btn" 
      bindtap="getUserProfile"
    >微信授权登录</button>
    
    <!-- 兼容旧版获取用户信息按钮 -->
    <button 
      wx:else 
      class="login-btn" 
      open-type="getUserInfo" 
      bindgetuserinfo="getUserInfo"
    >微信授权登录</button>

    <!-- 跳过按钮 -->
    <view class="skip-btn" bindtap="wxLogin">跳过授权，直接登录</view>
  </view>

  <view class="footer">
    <view class="copyright">© 2025 语音笔记</view>
  </view>
</view>
