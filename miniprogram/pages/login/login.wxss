/* pages/login/login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.login-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.sub-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
  text-align: center;
}

.login-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 30rpx;
}

.skip-btn {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
  text-decoration: underline;
}

.footer {
  margin-bottom: 40rpx;
}

.copyright {
  font-size: 24rpx;
  color: #999;
}
