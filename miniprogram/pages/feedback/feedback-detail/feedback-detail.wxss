.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.feedback-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}

.feedback-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  max-width: 70%;
}

.feedback-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.feedback-status.replied {
  background-color: #e6f7ff;
  color: #1890ff;
}

.feedback-status.pending {
  background-color: #fff7e6;
  color: #fa8c16;
}

.feedback-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #666;
}

.info-label {
  width: 160rpx;
  color: #999;
}

.content-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.content-box {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.content-box.reply {
  background-color: #e6f7ff;
  color: #333;
}

.reply-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 15rpx;
  text-align: right;
}

.action-bar {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.action-btn {
  width: 48%;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  background-color: #f5f5f5;
  color: #666;
}

.action-btn.primary {
  background-color: #1890ff;
  color: white;
}
