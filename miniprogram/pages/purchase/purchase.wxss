/* 顶部切换 */
.tab-container {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  position: relative;
}

.tab.active {
  color: #4a90e2;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #4a90e2;
  border-radius: 2rpx;
}

/* 套餐列表 */
.package-container {
  padding: 20rpx;
}

.package-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  border: 2rpx solid transparent;
}

.package-item.selected {
  border-color: #4a90e2;
  background: #f0f7ff;
}

.package-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.package-price {
  margin-bottom: 20rpx;
}

.price {
  font-size: 48rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 20rpx;
}

.package-features {
  font-size: 24rpx;
  color: #666;
}

.feature {
  margin-bottom: 8rpx;
}

.package-tag {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: #ff6b6b;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.package-tag.recommend {
  background: #4a90e2;
}

.package-tag.special {
  background: #9c27b0;
}

/* 单独购买 */
.single-container {
  padding: 20rpx;
}

.single-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.single-list {
  display: flex;
  justify-content: space-between;
}

.single-item {
  flex: 1;
  margin: 0 10rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  border: 2rpx solid transparent;
}

.single-item.selected {
  border-color: #4a90e2;
  background: #f0f7ff;
}

.time {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

/* 优惠券 */
.coupon-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #fff;
  margin-top: 20rpx;
}

.coupon-text {
  font-size: 28rpx;
  color: #333;
}

.get-coupon {
  font-size: 24rpx;
  color: #4a90e2;
}

/* 总计 */
.total-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #fff;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.total-price {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 底部按钮 */
.bottom-button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.purchase-btn {
  background: #4a90e2;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.agreement {
  text-align: center;
  font-size: 24rpx;
  color: #999;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 标签切换样式 */
.tab-container {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 4rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* 计划列表样式 */
.content {
  margin-bottom: 100rpx;
}

.plan-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.plan-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  position: relative;
  border: 2rpx solid #eee;
}

.plan-item.selected {
  border-color: #07c160;
  background: rgba(7, 193, 96, 0.05);
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.plan-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.plan-recommend {
  font-size: 24rpx;
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.plan-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.plan-price {
  margin-bottom: 20rpx;
}

.current-price {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.plan-duration {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 底部样式 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.total-price {
  font-size: 28rpx;
  color: #333;
}

.total-price .price {
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: bold;
}

.purchase-btn {
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  padding: 0 60rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  margin: 0;
}

.purchase-btn::after {
  border: none;
} 