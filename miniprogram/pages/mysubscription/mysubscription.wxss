.container {
  padding: 20rpx;
}

.subscription-list {
  margin-top: 20rpx;
}

.subscription-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.order-info {
  margin-bottom: 20rpx;
}

.plan-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.order-time, .order-status, .order-amount {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  margin: 0;
}

.action-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.action-btn.repay {
  background: #07c160;
  color: #fff;
}

.action-btn.close {
  background: #ff4d4f;
  color: #fff;
} 