.page-container {
  min-height: 100vh;
  background-color: #fff;
  padding-bottom: 120rpx;
}

/* 顶部导航栏 */
.nav-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #fff;
  border-bottom: 2rpx solid #f0f0f0;
  padding: 32rpx;
  display: flex;
  align-items: center;
}

.back-button {
  padding: 16rpx;
  margin-right: 32rpx;
}

.back-button .iconfont {
  font-size: 40rpx;
  color: #333;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
}

.nav-right {
  width: 80rpx;
}

/* 会议信息卡片 */
.meeting-card {
  background-color: #f0f7ff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 32rpx;
}

.meeting-title {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.meeting-info {
  display: flex;
  font-size: 28rpx;
  color: #666;
}

.info-item {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
}

.info-item .iconfont {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 会议内容区域 */
.content-section {
  padding: 0 32rpx;
}

.content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 16rpx;
}

.content-title {
  font-size: 32rpx;
  font-weight: 500;
}

.content-actions {
  display: flex;
}

.action-button {
  display: flex;
  align-items: center;
  margin-left: 32rpx;
  color: #1677ff;
  font-size: 28rpx;
}

.action-button .iconfont {
  font-size: 32rpx;
  margin-right: 4rpx;
}

/* 会议内容列表 */
.content-list {
  margin-bottom: 32rpx;
}

.content-item {
  display: flex;
  margin-bottom: 40rpx;
}

.speaker-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #1677ff;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
  font-size: 32rpx;
}

.content-detail {
  flex: 1;
}

.speaker-info {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.speaker-name {
  font-weight: 500;
  margin-right: 16rpx;
  font-size: 28rpx;
}

.speaker-time {
  font-size: 24rpx;
  color: #999;
}

.speech-text {
  line-height: 1.5;
  color: #333;
  font-size: 28rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 2rpx solid #f0f0f0;
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
}

.bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
  font-size: 24rpx;
}

.bar-item .iconfont {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.bar-item:active {
  opacity: 0.7;
}
