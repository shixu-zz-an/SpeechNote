/* detail.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 0;
  background-color: #F5F7FA;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFF;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.back-btn {
  padding: 10rpx;
}

.back-btn text {
  font-size: 40rpx;
  color: #333;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #F0F2F5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin: 0 20rpx;
}

.search-input icon {
  margin-right: 10rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  height: 60rpx;
}

.action-btn {
  padding: 10rpx;
}

.action-btn text {
  font-size: 40rpx;
  color: #333;
}

.recording-info {
  padding: 20rpx 30rpx;
  background-color: #FFF;
  border-bottom: 1rpx solid #EEE;
  margin-bottom: 2rpx;
}

.recording-title-container {
  margin-bottom: 10rpx;
}

.recording-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  padding: 6rpx 0;
  position: relative;
  display: inline-block;
  max-width: 100%;
}

.recording-title:active {
  background-color: rgba(62, 123, 250, 0.1);
  border-radius: 4rpx;
}

.recording-title::after {
  content: "\270E"; /* 编辑图标 Unicode */
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
  opacity: 0.6;
}

.recording-title-input {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  padding: 6rpx 10rpx;
  border-bottom: 2rpx solid #3E7BFA;
  width: 100%;
  box-sizing: border-box;
  background-color: rgba(62, 123, 250, 0.05);
  border-radius: 4rpx;
}

.recording-meta {
  font-size: 26rpx;
  color: #999;
}

.recording-meta text {
  margin-right: 20rpx;
}

.tab-nav {
  display: flex;
  background-color: #FFF;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #EEE;
}

.tab {
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #3E7BFA;
  font-weight: 500;
}

.tab.active:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  height: 4rpx;
  background-color: #3E7BFA;
  border-radius: 2rpx;
}

.content-area {
  flex: 1;
  overflow: auto;
  padding-bottom: 120rpx; /* 为底部播放器留出空间 */
}

.tab-content {
  padding: 30rpx;
  min-height: 400rpx;
}

.bullet-list {
  background-color: #FFF;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bullet-item {
  position: relative;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 1.6;
}

.bullet-item:before {
  content: "\2022";
  position: absolute;
  left: 0;
  color: #3E7BFA;
}

.empty-content {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300rpx;
  color: #999;
  font-size: 28rpx;
}

.speaker-block {
  margin-bottom: 30rpx;
  background-color: #FFF;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.speaker-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.speaker-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #3E7BFA;
  color: #FFF;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.speaker-time {
  font-size: 24rpx;
  color: #999;
}

.speech-content {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
}

.speech-content rich-text {
  width: 100%;
  display: inline-block;
}

.ai-chat-container {
  padding-bottom: 120rpx;
}

.chat-item {
  display: flex;
  margin-bottom: 30rpx;
}

.ai-message {
  flex-direction: row;
}

.user-message {
  flex-direction: row-reverse;
}

.chat-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin: 0 20rpx;
  background-color: #F0F2F5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.chat-avatar image {
  width: 100%;
  height: 100%;
}

.chat-bubble {
  max-width: 70%;
  padding: 20rpx;
  border-radius: 12rpx;
}

.ai-message .chat-bubble {
  background-color: #FFF;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-message .chat-bubble {
  background-color: #3E7BFA;
  color: #FFF;
}

.chat-text {
  font-size: 30rpx;
  line-height: 1.6;
}

.chat-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  text-align: right;
}

.user-message .chat-time {
  color: rgba(255, 255, 255, 0.8);
}

.ai-input-area {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #FFF;
  border-top: 1rpx solid #EEE;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 90;
}

.ai-input {
  flex: 1;
  padding: 20rpx;
  border-radius: 30rpx;
  background-color: #F0F2F5;
  font-size: 28rpx;
}

.ai-send-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #3E7BFA;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.ai-send-btn text {
  font-size: 40rpx;
  color: #FFF;
}

.audio-player {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFF;
  border-top: 1rpx solid #EEE;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.player-controls {
  display: flex;
  align-items: center;
}

.player-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.player-btn text {
  font-size: 50rpx;
  color: #3E7BFA;
}

.player-progress {
  flex: 1;
  margin: 0 20rpx;
}

.progress-slider {
  margin: 0;
}

.time-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}
