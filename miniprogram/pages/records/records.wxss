.page-container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 顶部搜索栏 */
.header {
  background-color: #fff;
  padding: 32rpx;
  flex-shrink: 0;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  color: #333;
}

.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #f0f2f5;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  margin-right: 24rpx;
  color: #999;
}

.search-input .iconfont {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
  height: 60rpx;
  color: #333;
}

.search-placeholder {
  font-size: 28rpx;
}

.filter-button {
  padding: 8rpx;
}

.filter-button .iconfont {
  font-size: 36rpx;
  color: #666;
}

/* 会议列表 */
.meeting-list {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
  padding-bottom: 24rpx; /* 移除为底部录音按钮留出的空间 */
  -webkit-overflow-scrolling: touch;
}

.meeting-date {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin: 24rpx 0;
}

.meeting-item {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.meeting-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.meeting-title {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.play-button {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #e6f4ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.play-button .iconfont {
  font-size: 32rpx;
  color: #1677ff;
}

.meeting-name {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.meeting-info {
  display: flex;
  align-items: center;
  margin-left: 88rpx;
  color: #999;
  font-size: 26rpx;
}

.meeting-time,
.meeting-duration {
  display: flex;
  align-items: center;
  margin-right: 32rpx;
}

.info-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 可滑动删除的列表项样式 */
.sliding-item-container {
  width: 100%;
  position: relative;
  overflow: hidden;
  margin-bottom: 2rpx;
}

.sliding-item {
  width: 100%;
  position: relative;
  display: flex;
  transition: transform 0.25s cubic-bezier(0.1, 0.5, 0.5, 1); /* 改善滑动的过渡效果 */
}

.slide-left {
  transform: translateX(-150rpx);
}

.meeting-item {
  width: 100%;
  background-color: #fff;
  z-index: 2;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: -150rpx; /* 默认隐藏在右侧 */
  width: 150rpx;
  height: 100%; /* 固定删除按钮高度与会议项高度一致 */
  background-color: #ff4d4f;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  width: 100%;
  box-sizing: border-box;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多提示 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  border: 3rpx solid #f3f3f3;
  border-top: 3rpx solid #1677ff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 已加载全部提示 */
.no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 录音按钮样式保留但不使用 */
.record-button {
  display: none; /* 隐藏录音按钮 */
}
