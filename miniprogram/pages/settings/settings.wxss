/* pages/settings/settings.wxss */

/* 页面容器 */
page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.settings-page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 导航栏 */
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.back-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.nav-right {
  width: 60rpx;
}

/* 用户信息区域 */
.user-info {
  background: linear-gradient(135deg, #4a90e2, #357abd);
  padding: 30rpx;
  color: #fff;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 版本信息卡片 */
.version-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 20rpx;
}

.version-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.version-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.version-number {
  font-size: 32rpx;
  font-weight: bold;
}

/* 功能列表 */
.function-list {
  margin: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.function-item:last-child {
  border-bottom: none;
}
.function-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.function-item:active {
  background-color: #f8f8f8;
}

.function-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 48rpx;
  text-align: center;
}

.function-name {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

/* 退出登录区域 */
.logout-section {
  margin: 40rpx 20rpx 20rpx;
}

.logout-button {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  border: 2rpx solid #ff4d4f;
}

.logout-button:active {
  background-color: #fff2f0;
}

.logout-text {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
}

/* 图标字体 */
.iconfont {
  font-family: "iconfont";
}

.icon-back::before {
  content: "←";
  font-size: 32rpx;
  color: #333;
}

.icon-arrow-right::before {
  content: "→";
  font-size: 24rpx;
}